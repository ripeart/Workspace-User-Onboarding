    <script>
      /**
       * Load organizational units from Google Workspace
       * Calls backend Apps Script function to fetch OUs via Admin SDK
       */
      function loadOUs() {
        google.script.run
          .withSuccessHandler(function(ous) {
            const ouSelect = document.getElementById('ou');
            ouSelect.innerHTML = '<option value="">Select Organizational Unit</option>';
            // Populate dropdown with organizational units
            ous.forEach(function(ou) {
              const option = document.createElement('option');
              option.value = ou.orgUnitPath;
              option.textContent = ou.name;
              ouSelect.appendChild(option);
            });
          })
          .withFailureHandler(function(error) {
            console.error('Failed to load OUs:', error);
            const ouSelect = document.getElementById('ou');
            ouSelect.innerHTML = '<option value="">Error loading OUs</option>';
          })
          .getOUs(); // Backend function name
      }

      /**
       * Phone number input validation
       * Allows only digits, spaces, hyphens, and + at the beginning
       */
      const phoneInput = document.getElementById('phoneNumber');
      
      // Filter input as user types
      phoneInput.addEventListener('input', function(e) {
        let value = e.target.value;
        // Remove invalid characters (anything except digits, spaces, hyphens)
        value = value.replace(/(?!^\+)[^\d\s-]/g, '');
        // Ensure only one + at the start
        if (value.indexOf('+') > 0) {
          value = value.replace(/\+/g, '');
          value = '+' + value;
        }
        e.target.value = value;
      });
      
      // Prevent typing invalid characters
      phoneInput.addEventListener('keypress', function(e) {
        // Allow + only at the start
        if (e.target.selectionStart === 0 && e.key === '+') return true;
        // Allow only digits, spaces, and hyphens
        if (!/[\d\s-]/.test(e.key)) {
          e.preventDefault();
        }
      });

      /**
       * Email domain auto-append for primary email
       * IMPORTANT: Update @yourdomain.com to match your domain
       */
      const emailInput = document.getElementById('email');
      
      // Append domain when user leaves the field
      emailInput.addEventListener('blur', function() {
        if (this.value && !this.value.includes('@')) {
          this.value = this.value + '@yourdomain.com'; // UPDATE THIS DOMAIN
        }
      });

      /**
       * Form submission and validation
       * Validates all required fields before submitting to backend
       */
      document.getElementById('onboardForm').addEventListener('submit', function(e) {
        e.preventDefault();
        let isValid = true;
        
        // Reset previous error states
        document.querySelectorAll('.form-group').forEach(group => {
          group.classList.remove('error');
        });

        // Validate first name
        const firstName = document.getElementById('firstName');
        if (!firstName.value || firstName.value.length > 30) {
          firstName.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate last name
        const lastName = document.getElementById('lastName');
        if (!lastName.value || lastName.value.length > 30) {
          lastName.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate title
        const title = document.getElementById('title');
        if (!title.value || title.value.length > 30) {
          title.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate department
        const department = document.getElementById('department');
        if (!department.value) {
          department.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate primary email (username)
        const email = document.getElementById('email');
        if (!email.value || email.value.length > 30) {
          email.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate secondary email
        const secondaryEmail = document.getElementById('secondaryEmail');
        if (!secondaryEmail.value || secondaryEmail.value.length > 30) {
          secondaryEmail.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate phone number (7-12 digits after removing non-digits)
        const countryCode = document.getElementById('countryCode');
        const phoneNumber = document.getElementById('phoneNumber');
        const phoneDigits = phoneNumber.value.replace(/\D/g, '');
        if (!countryCode.value || !phoneDigits || phoneDigits.length < 7 || phoneDigits.length > 12) {
          phoneNumber.parentElement.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate organizational unit
        const ou = document.getElementById('ou');
        if (!ou.value) {
          ou.parentElement.classList.add('error');
          isValid = false;
        }

        // Validate manager selection
        const managerEmailInput = document.getElementById('managerEmail');
        if (!managerEmailInput.value) {
          managerInput.parentElement.parentElement.classList.add('error');
          isValid = false;
        }

        // If all validations pass, submit to backend
        if (isValid) {
          // Show loading modal
          document.getElementById('modalOverlay').classList.add('active');
          
          // Prepare form data for submission
          const formData = {
            firstName: firstName.value,
            lastName: lastName.value,
            title: title.value,
            department: department.value,
            email: email.value,
            secondaryEmail: secondaryEmail.value,
            phoneNumber: countryCode.value + phoneDigits, // Combine country code + number
            ou: ou.value,
            manager: managerEmailInput.value,
            managerName: document.getElementById('managerName').value
          };

          // Call backend Apps Script function to create user
          google.script.run
            .withSuccessHandler(function(response) {
              // Hide loading modal
              document.getElementById('modalOverlay').classList.remove('active');
              
              if (response && response.success) {
                // Show success modal with created user details
                const details = response.user;
                let html = '';
                html += `<p><strong>Name:</strong> ${details.name}</p>`;
                html += `<p><strong>Email:</strong> ${details.email}</p>`;
                html += `<p><strong>Department:</strong> ${details.department}</p>`;
                html += `<p><strong>Title:</strong> ${details.title}</p>`;
                html += `<p><strong>Manager:</strong> ${details.managerName ? details.managerName + ' &lt;' + details.manager + '&gt;' : (details.manager ? details.manager : 'N/A')}</p>`;
                document.getElementById('successDetails').innerHTML = html;
                document.getElementById('successModal').classList.add('active');
                
                // Reset form for next user
                document.getElementById('onboardForm').reset();
              } else {
                alert('User creation failed. Please try again.');
              }
            })
            .withFailureHandler(function(error) {
              // Hide loading modal and show error
              document.getElementById('modalOverlay').classList.remove('active');
              document.getElementById('errorDetails').textContent = (typeof error === 'string' ? error : (error && error.message ? error.message : 'Unknown error'));
              document.getElementById('errorModal').classList.add('active');
            })
            .createUser(formData); // Backend function name
        }
      });

      /**
       * Manager autocomplete functionality
       * Fetches all users and provides live search suggestions
       */
      
      // Store all managers/users for autocomplete
      let allManagers = [];
      
      // Fetch all users from Google Workspace on page load
      function fetchManagers() {
        google.script.run.withSuccessHandler(function(users) {
          allManagers = users;
        }).getAllUsers(); // Backend function name
      }
      fetchManagers();

      // Setup autocomplete event listeners
      const managerInput = document.getElementById('managerInput');
      const managerEmail = document.getElementById('managerEmail');
      const managerSuggestions = document.getElementById('managerSuggestions');

      // Filter and display suggestions as user types
      managerInput.addEventListener('input', function() {
        const value = this.value.trim().toLowerCase();
        managerSuggestions.innerHTML = '';
        
        // Hide suggestions if input is empty
        if (!value) {
          managerSuggestions.style.display = 'none';
          managerEmail.value = '';
          return;
        }
        
        // Filter managers by name or email, limit to 10 results
        const matches = allManagers.filter(u =>
          u.name.toLowerCase().includes(value) || u.email.toLowerCase().includes(value)
        ).slice(0, 10);
        
        // Hide if no matches
        if (matches.length === 0) {
          managerSuggestions.style.display = 'none';
          managerEmail.value = '';
          return;
        }
        
        // Create suggestion items
        matches.forEach(user => {
          const div = document.createElement('div');
          div.className = 'autocomplete-suggestion';
          div.textContent = `${user.name} <${user.email}>`;
          
          // Handle selection
          div.addEventListener('mousedown', function(e) {
            managerInput.value = `${user.name} <${user.email}>`;
            managerEmail.value = user.email;
            document.getElementById('managerName').value = user.name;
            managerSuggestions.style.display = 'none';
          });
          
          managerSuggestions.appendChild(div);
        });
        
        managerSuggestions.style.display = 'block';
      });
      
      // Hide suggestions when input loses focus
      managerInput.addEventListener('blur', function() {
        setTimeout(() => managerSuggestions.style.display = 'none', 200);
      });
    </script>
  </body>
</html>
